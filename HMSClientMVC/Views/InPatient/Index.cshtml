
@{
    ViewBag.Title = "Index";

}
<h2 style="text-decoration-color:#000000"><b>InPatient</b></h2>

<h4>Dashboard</h4>
<hr>

<div>
  <button id="View" class="btn-primary" style="height: 40px; width: 150px; color: white; background-color: #222222">
   @Ajax.ActionLink("Book Appointment", "Create", new AjaxOptions
{

    HttpMethod = "Get",
    UpdateTargetId = "Display",
    InsertionMode = InsertionMode.Replace


})
        </button>


        <button id="View" class="btn-primary" style="height: 40px; width: 150px; color: white; background-color: #222222">
            @Ajax.ActionLink("Report", "IViewReport", new AjaxOptions
       {

           HttpMethod = "Get",
           UpdateTargetId = "Display",
           InsertionMode = InsertionMode.Replace


            })

        </button>


        <button id="Bill" class="btn-primary" style="height: 40px; width: 150px; color: white; background-color: #222222">
            @Ajax.ActionLink("Bill", "IBill", "InPatient", new AjaxOptions
         {
                LoadingElementId = "div_loading",

                HttpMethod = "Get",

                UpdateTargetId = "Display",
                InsertionMode = InsertionMode.Replace
            })

        </button>


</div>


<div id="Display">

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")



    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

}

